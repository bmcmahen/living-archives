  background rgba(0,0,0,0.9)

#swipe-controller
  position fixed
  bottom 0
  left 0
  right 0
  display block
  z-index 1250
  text-align center
  background rgba(49, 49, 49, 0.95)

a.previous.hidden, a.learn-more.hidden
  opacity 0
  pointer-events none

.swipe-content
  padding 25px
  position absolute

  h3
    border-bottom 2px solid
    margin-top 35px

  &.white
    background white
    background rgba(255,255,255,0.95)

  &.one-thirds
    width 30%

  &.two-thirds
    width 60%

  &.half
    width 45%

  &.right
    right 0

  &.top
    top 0

  &.left
    left 0

  &.bottom
    bottom 0


// Map

#map
  width 100%
  height 100%

#map-wrapper
  position relative
  height 100%
  box-sizing border-box

ul.switch
  box-sizing border-box
  margin 0

  & li.circle
    cursor pointer
    height 50px
    line-height 50px
    width 50px
    display inline-block
    margin-right 5px
    text-align center

    & a
      font-weight bold
      vertical-align middle
      display inline-block
      text-align center
      border-radius 50%
      transition all 150ms ease-in
      text-decoration none
      overflow hidden
      background rgb(62, 113, 134)
      color rgba(255,255,255,0.5)
      width 30px
      height 30px
      line-height 30px

      &:hover
        text-decoration none

    &.active a
      color white
      width 50px
      height 50px
      line-height 50px
      background #3bb2d0

p.small
  font-size: 13px
  line-height: 18px

#map-wrapper .swipe-content
  display none
  max-height: 90%
  overflow-x: hidden
  overflow-y: auto
  box-sizing: border-box
  width: 40%

  &.active
    display block

