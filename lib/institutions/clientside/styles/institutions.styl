// Institutions - Places

#swipe-block
  position fixed
  top 0
  height 100%
  right 0
  bottom 0
  left 0
  z-index 1200
  opacity 1


#swipe-content
  display block
  max-height 90%
  overflow-y auto
  overflow-x hidden
  box-sizing border-box

  &.hidden
    display none

  & h3
    font-size 30px
    line-height 35px
    padding-bottom 3px
    font-weight bold
    margin 0
    opacity 1
    display inline-block
    transition opacity .5s

a.exit
  color white
  padding 5px 10px
  z-index 1500


#swipe-container
  width: 100%;
  height: 500px;
  margin-top: 67px;
  overflow: hidden;

  ul
    margin: 0;
    padding: 0;
    height: 380px;
    box-sizing: border-box

  ul li
    display: table-cell;
    background: #f8f8f8;
    color: #888;
    width: 100%;
    height: 500px;
    list-style: none;
    margin: 0;
    -webkit-user-select: none;
    box-sizing: border-box;
    background-size cover !important
    overflow auto

    &.no-padding
      padding: 0

    & p
      font-size: 14px
      font-family $serifFont
      line-height: 23px

    & h3
      font-size 30px
      font-weight bold
      margin 0
      opacity 1
      display inline-block
      transition opacity .5s

    & img.pull-left
      float left
      margin-right 15px
      margin-bottom 10px

    & h4
      font-size 20px
      color #049cdb
      font-weight bold
      margin 5px 0
      background rgba(238, 238, 238, 0.9)
      padding 2px 7px
      display inline-block

    & a.learn-more
      float right

    & a.previous
      float left

    &.one
      background url('/img/frontend/institutions/inst10.jpg') no-repeat center center

    &.two
      background url('/img/frontend/institutions/EugenicsBoard1936b_UniversityofAlbertaArchives.jpg') no-repeat center center

  button
    margin: 5px 0;
    border: 1px solid #ddd;
    padding: 5px 10px;
    background: #eee;
    border-radius: 2px;
    cursor: pointer;

  button:hover
    background: #fff;

.grid a i
