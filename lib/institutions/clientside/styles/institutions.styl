
#accordion-wrapper
  width 100%
  position relative
  margin 0
  padding 0
  overflow hidden
  height 500px

.white
  margin 30px
  padding 25px
  background white
  background rgba(255,255,255,0.95)

.accordion-child
  height 500px
  width 25%
  transition width .5s, opacity .5s
  transition-timing-function ease-in-out
  float left
  cursor pointer
  background-size cover !important
  overflow hidden
  transform translate3d(0,0,0)

  & .accordion-content
    display block

  & .accordion-content h3
    font-size 25px
    margin 25px
    padding 3px 7px
    line-height 29px
    border-bottom none
    border-radius 3px
    background white
    background rgba(255,255,255,0.95)

  & .accordion-active-content
    display none

  &.active.rendered .accordion-active-content
    display block

  &.active .accordion-content
    display none

  & p
    margin 0
    padding 0
    font-family $serifFont
    font-size 16px
    line-height 23px

  &:hover
    box-shadow inset 40px 40px 80px rgba(0,0,0,0.3)

  & h3
    font bold 40px $sansFont
    opacity 1
    margin 25px 0 15px 0
    border-bottom 2px solid
    display inline-block
    transition opacity .5s

  &.active
    cursor default
    width 70%

    &:hover
      box-shadow none

  &.collapsed
    width 10%

    & h3
      opacity 0

    &:hover
      opacity 1

  &.content
    opacity 0
    transition opacity .3s
    // position absolute

    &.visible
      opacity 1

a.learn-more, a.previous
  display: inline-block
  margin-top: 20px
  font-size: 16px
  line-height 22px
  font-family: $sansFont
  color: $white
  transition background 0.4s
  background $brightBlue
  padding 5px 10px
  border-radius 3px

  &:hover
    text-decoration none
    background rgb(36, 37, 43)

a.controls
  display inline-block
  font-family $sansFont
  color $white
  background $blue
  opacity 1
  transition opacity 0.5s
  padding 7px 14px
  border none
  border-radius 3px
  text-transform uppercase
  margin 8px 5px


.institutions
  background url('/img/frontend/institutions/inst7.jpg') no-repeat center center

.leaving
  background url('/img/frontend/institutions/inst10.jpg') no-repeat center center

.people
  background url('/img/frontend/institutions/EugenicsBoard1936b_UniversityofAlbertaArchives.jpg') no-repeat center center

.contemporary
