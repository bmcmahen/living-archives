.hover-node {
	cursor: pointer;
}

h5 {
	font-size: 15px;
margin: 10px 0;
}

#app {
	position: relative;
	width: 100%;
	box-sizing: border-box;
}

a.link {
	line-height: 23px;
}

#fullscreenmode {
	position: absolute;
	top: 0;
	left: 15px;
	float: none;
}

#mindmap {
	width: 70%;
	display: inline-block;
}

#data {
	width: 30%;
	bottom: 0;
	position: absolute;
	top: 0;
	padding: 10px 15px;
	box-sizing: border-box;
	overflow: auto;
	right: 0;
	border-left: 2px dashed #eee;
	border-radius: 3px;
}

#data h2 {
	line-height: 32px;
	margin-top: 15px;
	padding-bottom: 10px;
	color: #049cdb;
}