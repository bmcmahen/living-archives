/**
 * Navigation Styles
 */


// Header Styles
#header

  & p
    margin 4px

  & img.logo
    float left
    margin-top 29px
    margin-right 10px
    width 50px
    display none

  & a.logo
    font 33px $sansFont
    margin 31px 0
    display inline-block
    color $white
    float left

    &:hover
      text-decoration none

  & ul.nav a.active
    pointer-events none
    cursor default

  & .navbar-inner
    box-shadow none
    border-radius 0
    border-bottom none
    min-height 100px
    background $headerColor
    border none

  & #header .container
    width 940px

  & .navbar
    margin-bottom: 0
    color: #777777

    & .nav
      float right
      margin 0
      margin-top 71px

      & li
        margin-left 5px
        float left

      & > li > a
        color $white
        font 600 14px/18px $sansFontCondensed
        min-width 120px
        text-align center
        display inline-block
        text-decoration none
        text-shadow none
        white-space nowrap
        padding 14px 15px 9px
        background $purple
        border-top-right-radius 3px
        border-top-left-radius 3px

        &:hover
          color $lightGray

        &.active
          background $lightGray url('img/dotgrid-black.png')
          color $blue

          &:hover
            pointer-events none

// Sub Header Styles
#sub-header
  padding-top 10px
  padding-bottom 5px

  & .zoom-image
    min-width 100%
    transition background-size 0.2s linear
    background-position 50%
    background-size 101%
    height 91px
    border-radius 3px

    &:hover
      background-size 150%

  & a
    display block
    margin 30px 0 23px 0
    height 115px

  & div.prod
    text-align center
    box-sizing border-box
    height: 115px

    &:hover span.label
      color #000

    &.active span.label
      pointer-events none
      border-bottom 2px solid

    & img
      background $white
      border-radius 4px
      height 91px

    & span.label
      font 700 11px/18px $sansFontSmall
      text-transform uppercase
      color $blue
      border-radius 2px
      display inline-block
      margin-top 5px
      padding 0 5px



// Universal App Styles & hacks

// Weird ugly hack. Bootstrap should handle this for us.
#header .container
  width 940px

#app h2
  font-weight 800
  color $accentColor

#fullscreenmode
  color #999
  margin-top 12px
  float right

*
  text-size-adjust: none

.introjs-helperNumberLayer
  display none