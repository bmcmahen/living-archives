.navbar-swipe-container {
  width: 100%;
  overflow: hidden;
  background: #464952;
  background: #B9B9B9;
  background: rgba(185, 185, 185, 0.95);
  padding: 0 15px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 40;
}


.navbar-swipe-container .next-button,
.navbar-swipe-container .prev-button {
  position: absolute;
  top: 50%;
  margin-top: -28px;
  border-radius: 50%;
  font-size: 28px;
  vertical-align: top;
  line-height: 22px;
  font-weight: bold;
  border: 3px solid;
  padding: 11px 16px 9px 18px;
  z-index: 500;
  background: #fff;
  color: #333;
}

.navbar-swipe-container .prev-button {
  padding: 11px 18px 9px 16px;
}

.navbar-swipe-container .next-button:hover,
.navbar-swipe-container .prev-button:hover {
  color: #049cdb;
  text-decoration: none;
}

.navbar-swipe-container .next-button:active,
.navbar-swipe-container .prev-button:active {
  background: #ddd;
}


.navbar-swipe-container .next-button.hide,
.navbar-swipe-container .prev-button.hide {
  display: none;
}

.navbar-swipe-container .prev-button {
  left: 10px;
}

.navbar-swipe-container .next-button {
  right: 10px;
}

.swipe-list:after,
.swipe-list:before {
  content: "";
  display: table;
}

.swipe-list:after {
  clear: both;
}

.swipe-list {
  list-style-type: none;
  position: relative;
  width: 100%;
  padding: 0;
}

.swipe-item {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  border-right: 0.5em solid transparent;
  border-left: 0.5em solid transparent;
  float: left;
  list-style-type: none;
}

.swipe-item a {
  display: block;
  border: 4px solid transparent;
  border-radius: 3px;
}

.swipe-item a:hover {
  border-color: #888;
}

.swipe-item a.active,
.swipe-item a:active,
.swipe-item a.active:hover {
  border-color: #049cdb;
}

.swipe-item a.active span.label {
  color: #049cdb;
}

.swipe-item img {
  width: 100%;
}

.navbar-swipe-container.touchmoving img,
.navbar-swipe-container.touchmoving a {
  -webkit-user-select: none;  /* Chrome all / Safari all */
  -moz-user-select: none;     /* Firefox all */
  -ms-user-select: none;      /* IE 10+ */
  -o-user-select: none;
  user-select: none;
  pointer-events: none;
}

.zoom-image {
  width: 100%;
  height: 100px;
  background-color: white;
}

span.label {
  font: 500 12px/20px arial, sans-serif;
  color: white;
  display: inline-block;
  margin-top: 5px;
  position: absolute;
  bottom: 0px;
  left: 0;
  background: rgba(255, 255, 255, 0.89);
  color: black;
  display: block;
  width: 100%;
  text-align: center;
}

.prod {
  position: relative;
  border-radius: 3px;
  overflow: hidden;
}