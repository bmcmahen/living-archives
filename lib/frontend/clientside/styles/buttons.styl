button.btn
  font-size 12px
  font-weight 600
  background-repeat: repeat-x
  border-radius 2px
  margin 3px
  color white
  text-decoration none
  background $blue
  padding 8px 11px
  border none

div.btn-group
  padding 0px
  display inline-block
  margin 5px
  float right

div.btn-group button.btn
  border-radius 0px
  margin 0px
  margin-left -1px

div.btn-group button.active
  box-shadow inset 0px 5px 10px rgba(0,0,0,0.10)
  background rgba(0,0,0,0.15)
  color rgba(0,0,0,0.60)

div.btn-group:after
  clear both

div.btn-group button.btn:first-child
  border-top-left-radius 3px
  border-bottom-left-radius 3px
  margin-left 0px

input
  width 150px
  padding 7px
  font-size 12px
  border-radius 2px
  border none

span.button-label
  float right
  padding 9px 2px 9px 2px
  display inline-block

fieldset
  margin 0px
  padding 0px
  border 0px

legend
  display inline
  max-width 15px
