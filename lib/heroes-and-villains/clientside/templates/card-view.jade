.front(tabindex='0')
  img(src=locals.image.url+ '/convert?w=170&h=250&fit=crop&align=faces')
  .caption
    p.name
      strong= locals.title
    p.blurb= locals.shortDescription
.back
  .quotes
    span #{locals.first_name} #{locals.last_name} once said:
    if locals.heroQuote
      p<em>"#{heroQuote}"</em>
        if locals.heroQuoteSource
          a.tooltip-trigger(href='#', title=heroQuoteSource) Source
    if locals.villainQuote
      p<em>"#{villainQuote}"</em>
        if locals.villainQuoteSource
          a.tooltip-trigger(href='#', title=villainQuoteSource) Source
    if locals.ambiQuote
      p<em>"#{ambiQuote}"</em>
        if locals.ambiQuoteSource
          a.tooltip-trigger(href='#', title=ambiQuoteSource) Source
  a.personInfo More about #{locals.last_name}